model User {
    id           String   @id @default(uuid())
    email        String   @unique
    name         String
    passwordhash String
    prompts      Prompt[]
}

model Prompt {
    id        String        @id @default(uuid())
    user      User          @relation(fields: [userId], references: [id])
    userId    String
    model     String
    input     String
    output    String
    tokenCost String
    profile   PromptAnswer?
}

model PromptAnswer {
    id String @id @default(uuid())

    user     Prompt @relation(fields: [promptId], references: [id])
    promptId String @unique @default(uuid())
}
