generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                       String    @id @default(uuid())
  email                    String    @unique
  name                     String
  passwordhash             String
  totalTokenBalance        Int       @default(10000)
  totalImageBalance        Int       @default(15)
  role                     Role      @default(USER)
  createdAt                DateTime  @default(now())
  resetToken               String?
  resetTokenExpirationDate DateTime?
  isBanned                 Boolean   @default(false)
  banExpirationDate        DateTime?
  prompts                  Prompt[]
}

model Prompt {
  id           String         @id @default(uuid())
  user         User           @relation(fields: [userId], references: [id])
  userId       String
  model        String
  type         Type           @default(TEXT)
  input        String?         @db.LongText()
  output       String?         @db.LongText()
  tokenCost    String
  promptAnswer PromptAnswer[]
  @@index([userId])
}

model PromptAnswer {
  id        String @id @default(uuid())
  prompt    Prompt @relation(fields: [promptId], references: [id])
  promptId  String @default(uuid())
  modell    String
  output    String @db.LongText()
  tokenCost String
  @@index([promptId])
}

model BannedUsers {
  id    String  @id @default(uuid())
  email String? @unique
  name  String? @unique
}

enum Role {
  USER
  PREMIUMUSER
  ADMIN
}

enum Type {
  IMAGE
  TEXT
}
