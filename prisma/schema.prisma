// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                       String    @id @default(uuid())
  email                    String    @unique
  name                     String
  passwordhash             String
  totalTokenBalance        Int       @default(10000)
  role                     Role      @default(USER)
  createdAt                DateTime  @default(now())
  resetToken               String?
  resetTokenExpirationDate DateTime?
  isBanned Boolean  @default(false)
  bannExpirationDate DateTime?
  prompts                  Prompt[]
}

model Prompt {
  id        String        @id @default(uuid())
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  model     String
  input     String
  output    String
  tokenCost String
  profile   PromptAnswer?
}

model PromptAnswer {
  id        String @id @default(uuid())
  prompt    Prompt @relation(fields: [promptId], references: [id])
  promptId  String @unique @default(uuid())
  modell    String
  output    String
  tokenCost String
}

model BannedUsers {
  id        String @id @default(uuid())
  email                    String? @unique
  name                     String? @unique
}

enum Role {
  USER
  PREMIUMUSER
  ADMIN
}
