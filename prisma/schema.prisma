generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id                       String    @id @default(uuid())
  email                    String    @unique
  name                     String
  passwordhash             String
  createdAt                DateTime  @default(now())
  resetToken               String?
  resetTokenExpirationDate DateTime?
  role                     Role      @default(USER)
  isBanned                 Boolean   @default(false)
  banExpirationDate        DateTime?
  totalImageBalance        Int       @default(15)
  totalTokenBalance        Int       @default(4000)
  isVerified              Boolean   @default(false)
  verifyToken             String?
  prompts                  Prompt[]
}

model Prompt {
  id           String         @id @default(uuid())
  userId       String
  model        String
  input        String?        @db.LongText
  output       String?        @db.LongText
  tokenCost    String
  type         Type           @default(TEXT)
  user         User           @relation(fields: [userId], references: [id])
  promptAnswer PromptAnswer[]

  @@index([userId])
}

model PromptAnswer {
  id        String @id @default(uuid())
  promptId  String @default(uuid())
  modell    String
  output    String @db.LongText
  tokenCost String
  prompt    Prompt @relation(fields: [promptId], references: [id])

  @@index([promptId])
}

model PromptGradPrompt{
  id        String @id @default(uuid())
  task String
  trainingData String @db.LongText 
  output String @db.LongText
}

model BannedUsers {
  id    String  @id @default(uuid())
  email String? @unique
  name  String? @unique
}

enum Role {
  USER
  PREMIUMUSER
  ADMIN
}

enum Type {
  IMAGE
  TEXT
}
